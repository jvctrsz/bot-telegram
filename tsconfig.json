{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                   
    "rootDir": "./src",                     
    "outDir": "./dist",                     
    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",             
    "resolveJsonModule": true,              
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "skipLibCheck": true                    
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}